{% extends 'index.html' %}

{% block title %} Deploy {% endblock %}

{% block bootstrap_material_design %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/0.3.0/css/material-fullpalette.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-material-design/0.3.0/css/ripples.min.css">
{% endblock %}

{% block content %}

{% include 'partials/navigation.html' %}
<div class="container white">
  <h1>Deploy</h1>
  <form action="" method="POST">
    <div class="form-group">
      <label for="vm-plans">Planes</label>
      <select name="vm-plans" id="vm-plans" class="form-control">
        <option value="" disabled selected>Seleccione</option>
        {% for plan in data %}
        <option value="{{ plan.id }}"> {{ plan.name }} </option>
        {% endfor %}
      </select>
    </div>
    <div class="form-group">
      <label for="expiry-time">Fecha de expiraci√≥n</label>
      <input type="date" name="expiry-time" id="expiry-time" class="form-control">
    </div>
    <div class="form-group text-right">
      <a href="{{ URL }}/deploy">Regresar a deploy</a>
      <input class="btn btn-success" type="submit" name="buy" value="Enviar">
    </div>
  </form>
</div>

{% endblock %}
